{
  "name": "backend-api-koa-ts",
  "version": "1.0.0",
  "description": "Backend api based in koa in typescript",
  "engines": {
    "node": "~20.6.1",
    "npm": "~9.8.1"
  },
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "format": "npx prettier --write .",
    "test": "npx mocha --opts ./tests/mocha.opts ./tests",
    "test:coverage": "npx nyc mocha --opts ./tests/mocha.opts ./tests",
    "db:migrateAndStart": "npm run db:migrate && npm run start",
    "start": "node ./dist/src/api/app.js",
    "start:dev": "tsc-watch --onSuccess \"node ./dist/src/api/app.js\"",
    "dev": "ts-node nodemon --watch src --ext js --exec 'nf start -j Procfile.dev || exit 1'",
    "lint": "eslint . --ext .ts --report-unused-disable-directives",
    "lint:fix": "eslint . --ext .ts --fix",
    "snyk": "snyk auth $SNYK_TOKEN && snyk test",
    "migrate:make": "knex migrate:make --knexfile ./dist/src/config/knexfile.js",
    "db:migrate": "knex migrate:latest --knexfile ./dist/src/config/knexfile.js",
    "db:rollback": "knex migrate:rollback --knexfile ./dist/src/config/knexfile.js",
    "infra": "docker-compose up -d",
    "infra:stop": "docker-compose down"
  },
  "author": "Reloaded Team",
  "license": "MIT",
  "devDependencies": {
    "@strv/eslint-config-base": "^3.4.0",
    "@strv/eslint-config-node": "^3.3.1",
    "@strv/eslint-config-typescript": "^4.1.2",
    "@types/bcrypt": "^5.0.1",
    "@types/config": "^3.3.1",
    "@types/dotenv": "^8.2.0",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/kcors": "^2.2.6",
    "@types/koa": "^2.13.9",
    "@types/koa-compress": "^4.0.4",
    "@types/koa-helmet": "^6.0.6",
    "@types/koa-router": "^7.4.5",
    "@types/moment": "^2.13.0",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.7",
    "@types/pino": "^7.0.5",
    "@types/ramda": "^0.29.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "nodemon": "^3.0.1",
    "prettier": "3.0.3",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/swagger-ui": "^3.52.4",
    "@types/yamljs": "^0.2.34",
    "bcrypt": "^5.1.1",
    "config": "^3.3.9",
    "dotenv": "^16.3.1",
    "jsonschema": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "kcors": "^2.2.2",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-compress": "^5.1.1",
    "koa-helmet": "^7.0.2",
    "koa-router": "^11.0.2",
    "koa2-swagger-ui": "^5.10.0",
    "moment": "^2.29.4",
    "objection": "^3.1.2",
    "pg": "^8.11.3",
    "pino": "^8.16.0",
    "ramda": "^0.26.1",
    "ts-node": "^10.9.2",
    "yamljs": "^0.3.0"
  }
}
